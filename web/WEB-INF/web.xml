<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Customers</servlet-name>
        <servlet-class>controller.Customers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Customerz</servlet-name>
        <servlet-class>model.Customerz</servlet-class>
    </servlet>
    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Products</servlet-name>
        <servlet-class>controller.Products</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCartBean</servlet-name>
        <servlet-class>controller.ControllerCartBean</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Customers</servlet-name>
        <url-pattern>/Customers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Customerz</servlet-name>
        <url-pattern>/Customerz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Products</servlet-name>
        <url-pattern>/Products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCartBean</servlet-name>
        <url-pattern>/ControllerCartBean</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
